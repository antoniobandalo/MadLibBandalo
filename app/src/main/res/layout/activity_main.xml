<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="Mad Shlibs!"
        android:textSize="36sp"
        android:textStyle="italic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adjective"
            android:layout_width="@dimen/parameterWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Adjective:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/userAdj"
            android:layout_width="@dimen/textBoxWidth"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Ex: Happy"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/noun"
            android:layout_width="@dimen/parameterWidth"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Noun:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/userNoun"
            android:layout_width="@dimen/textBoxWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:hint="Ex: Clock"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/animal"
            android:layout_width="@dimen/parameterWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Animal:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/userAnimal"
            android:layout_width="@dimen/textBoxWidth"
            android:layout_height="match_parent"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Ex: Cat"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number"
            android:layout_width="@dimen/parameterWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Number:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/userNumber"
            android:layout_width="@dimen/textBoxWidth"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Ex: 25"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spaceHeight" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/darkBlue"
        android:onClick="sendInfo"
        android:text="Submit"
        android:textColor="@color/buttonText"
        android:textIsSelectable="false" />

</LinearLayout>